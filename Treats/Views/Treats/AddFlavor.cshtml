@{
  Layout = "_Layout";
}

@model Treats.Models.Treat

<div class="mainBox">
  <h2>Add a flavor to this treat</h2>
  <hr />
  @using (Html.BeginForm())
  {
      @Html.HiddenFor(model => model.TreatId)

      @Html.Label("Select flavor")
      @Html.DropDownList("FlavorId", null, "Please Select", htmlAttributes: new{required = "Please select an flavor"})
      
      <input type="submit" value="Add" class="btn btn-info btn-large" />
  }
  <p>@Html.ActionLink("Show all Machines", "Index",null, null, new { @class = "btn btn-info btn-large" })</p>
</div>