@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>;

<div class="mainBox">
  <h2>Engineer Manager</h2>
  <hr />
  <h4>@ViewBag.filterName</h4>
  <div class="lists">
    <ul >
      @if (@Model.Count == 0)
      {
        <li><strong>No Engineers found</strong></li>
      } 
      @foreach (Engineer Engineer in Model)
      {
        <li><strong>@Html.ActionLink($"{Engineer.EngineerName}", "Details", new { id = Engineer.EngineerId }) | Status: @Engineer.EngineerStatus</li>
      }
    </ul>
  </div>
  @using (Html.BeginForm())
  {  
    <label for="Name">Filter by name:</label>
    <input type="text" id="Name" name="name" required> 
    <input type="submit" value="Filter" class="btn btn-info btn-sm"/> 
    @Html.ActionLink("Show all Engineers", "Index", null, null, new { @class = "btn btn-info btn-sm" })
  }
  <hr />
  <p>@Html.ActionLink("Add new Engineer", "Create", null, null, new { @class = "btn btn-info btn-large" })</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>
