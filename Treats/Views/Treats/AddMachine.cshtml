@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<div class="mainBox">
  <h2>Add a machine to this Machine</h2>
  <hr />
  @using (Html.BeginForm())
  {
      @Html.HiddenFor(model => model.EngineerId)

      @Html.Label("Select Machine")
      @Html.DropDownList("MachineId", null, "Please Select", htmlAttributes: new{required = "Please select an Machine"})
      
      <input type="submit" value="Add" class="btn btn-info btn-large" />
  }
  <p>@Html.ActionLink("Show all Machines", "Index",null, null, new { @class = "btn btn-info btn-large" })</p>
</div>