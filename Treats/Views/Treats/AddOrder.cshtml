@{
  Layout = "_Layout";
}

@model Treats.Models.Treat

<div class="mainBox">
  <h2>Add this treat to order: @Model.TreatName</h2>
  <hr />
  @using (Html.BeginForm())
  {
      @Html.HiddenFor(model => model.TreatId)

      @Html.Label("Select order")
      @Html.DropDownList("OrderId", null, "Please Select", htmlAttributes: new{required = "Please select an order"})
      
      <input type="submit" value="Add" class="btn btn-info btn-large" />
  }
  
  <p>@Html.ActionLink("Show all treats", "Index",null, null, new { @class = "btn btn-info btn-large" })</p>
</div>