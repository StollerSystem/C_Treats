@{
  Layout = "_Layout";
}

@model Treats.Models.Treat

<div class="mainBox">
  <h2>Add a new Treat</h2>
  <hr />
  @using (Html.BeginForm())
  {
      @Html.Label("Name")
      @Html.TextBoxFor(model => model.TreatName, 
      new {@required="required"})
      
      @Html.Label("Description")
      @Html.TextBoxFor(model => model.TreatDescription, 
      new {@required="required"})

      @Html.Label("Price $")
      @Html.TextBoxFor(model => model.TreatPrice, 
      new {@required="required", type="number", step=".01"})      

      <input type="submit" value="Create Treat" class="btn btn-info btn-large" />
  }
  <p>@Html.ActionLink("Show all Treats", "Index",null, null, new { @class = "btn btn-info btn-large" })</p>
</div>