@{
  Layout = "_Layout";
}

@model Treats.Models.Flavor

<div class="mainBox">
  <h2>Add @Model.FlavorName to treat</h2>
  <hr />
  @using (Html.BeginForm())
  {
      @Html.HiddenFor(model => model.FlavorId)

      @Html.Label("Select Treat")
      @Html.DropDownList("TreatId", null, "Please Select", htmlAttributes: new{required = "Please select an Treat"})

      <input type="submit" value="Add" class="btn btn-info btn-large" />
  }
  <hr />
  <p>@Html.ActionLink("Show all Flavors", "Index",null, null, new { @class = "btn btn-info btn-large" })</p>
</div>