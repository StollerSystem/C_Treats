@{
  Layout = "_Layout";
}

@model Treats.Models.Flavor

<div class="mainBox">
  <h2>Are you sure you want to delete Flavor: <strong>@Html.DisplayFor(model => model.FlavorName)</strong>?</h2>
  <hr />  
  @using (Html.BeginForm())
  {
      <input type="submit" value="Delete!" class="delete" />
  }
  @Html.ActionLink("Back to Flavors", "Index",null,null, new { @class = "btn btn-info btn-large" })
</div>