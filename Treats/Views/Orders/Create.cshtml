      { new SelectListItem{Text="Actice", Value="Actice"},
      new SelectListItem{Text="Idle", Value="Idle"},       
      },"Please select", htmlAttributes: new{required = "Please select a stylist"}) *@

      <input type="submit" value="Create Order" class="btn btn-info btn-large" />
  }
  <p>@Html.ActionLink("Show all Orders", "Index",null, null, new { @class = "btn btn-info btn-large" })</p>
</div>